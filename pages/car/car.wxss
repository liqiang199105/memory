/**index.wxss**/

.container {
  position: absolute;
  height: 100%;
  width: 100%;
}

.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  height: 100%;
  padding-left: 8px;
  padding-right: 8px;
}

.news-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  padding-bottom: 8px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 2px;
}

.news-item-title {
  font-size: 16px;
  height: 50px;
  text-align: right;
  line-height: 50px;
  white-space: nowrap;
}

.news-item-image {
  width: 50px;
  height: 50px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-top: 40px;
}

.nick {
  width: 100px;
  height: 36px;
  line-height: 36px;
  font-size: 16px;
  background: transparent;
  color: #000;
  text-align: center;
}

/** 修改button默认的点击态样式类**/

.button-hover {
  background-color: f2f2f2;
}

.selection {
  display: flex;
  flex-wrap: wrap;

}

.selectionLeft {
  margin-top: 20px;
  width: 150px;
  height: 30px;
  color: #f2f2f2;
  text-align: center;
  display: block;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  background: #000;
  text-decoration: none;
  line-height: 30px;
}

.selectionRight {
  margin-left: 30px;
  margin-top: 20px;
  width: 150px;
  height: 30px;
  color: #f2f2f2;
  text-align: center;
  display: block;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  background: #000;
  text-decoration: none;
  line-height: 30px;
}
