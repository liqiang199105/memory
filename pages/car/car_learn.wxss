/**index.wxss**/

.container {
  position: absolute;
  height: 100%;
  width: 100%;
}

.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  height: 100%;
  padding-left: 8px;
  padding-right: 8px;
}

.news-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  padding-bottom: 8px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 2px;
}

.news-item-title {
  font-size: 16px;
  height: 50px;
  text-align: right;
  line-height: 50px;
  white-space: nowrap;
}

.news-item-image {
  width: 50px;
  height: 50px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-top: 40px;
}

.nick {
  width: 100px;
  height: 36px;
  line-height: 36px;
  font-size: 16px;
  background: transparent;
  color: #000;
  text-align: center;
}

/** 修改button默认的点击态样式类**/

.button-hover {
  background-color: f2f2f2;
}

.step1Selection {
  display: flex;
  flex-wrap: wrap;
}

.step1SelectionLeft {
  position: absolute;
  background-color: #4caf50; /* Green */
  border: none;
  color: white;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
  left: 20%;
}

.step1SelectionRight {
  position: absolute;
  right: 20%;
  background-color: #4caf50; /* Green */
  border: none;
  color: white;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
}
